            <Pane prefHeight="68.0" prefWidth="205.0">
               <children>
                  <Button fx:id="updateBtn" layoutX="69.0" layoutY="34.0" mnemonicParsing="false" onAction="#onClickUpdateCreateAttendance" prefHeight="32.0" prefWidth="108.0" styleClass="reg-button" stylesheets="@../../../css/scenes.css" text="Update" />
                  <Button fx:id="addBtn" layoutX="69.0" layoutY="34.0" mnemonicParsing="false" onAction="#onClickAddCreateAttendance" prefHeight="32.0" prefWidth="108.0" styleClass="reg-button" stylesheets="@../../../css/scenes.css" text="Add" />
               </children></Pane>
         </children>
      </HBox>
      <Button fx:id="timeInBtn" layoutX="473.0" layoutY="111.0" mnemonicParsing="false" onAction="#onClickTimeInBtn" onMouseClicked="#onTimeInMouseClicked" prefHeight="25.0" prefWidth="65.0" text="Time In" />
      <Button fx:id="timeOutBtn" layoutX="473.0" layoutY="154.0" mnemonicParsing="false" onAction="#onClickTimeOutBtn" onMouseClicked="#onTimeOutMouseClicked" text="Time Out" />
   </children>
