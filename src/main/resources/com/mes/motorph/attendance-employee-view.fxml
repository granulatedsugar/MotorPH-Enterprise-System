<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mes.motorph.controller.AttendanceEmployeeController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Attendance/Create Attendance" textFill="#cdd2d6">
         <font>
            <Font name="Arial Rounded MT Bold" size="12.0" />
         </font></Label>
      <Label layoutX="14.0" layoutY="51.0" text="Create New Attendance">
         <font>
            <Font name="Arial Rounded MT Bold" size="15.0" />
         </font></Label>
      <VBox layoutX="108.0" layoutY="94.0" prefHeight="200.0" prefWidth="162.0">
         <children>
            <Label text="Attendance Id" />
            <TextField fx:id="attendanceIdField" disable="true" />
            <Label text="Employee Id" />
            <TextField fx:id="empIdField" />
            <Label text="Date" />
            <DatePicker fx:id="dateField" stylesheets="@../../../css/date-picker.css" />
         </children>
      </VBox>
      <VBox layoutX="300.0" layoutY="94.0" prefHeight="200.0" prefWidth="162.0">
         <children>
            <Label text="Time In" />
            <TextField fx:id="timeInField" disable="true" />
            <Label text="Time Out" />
            <TextField fx:id="timeOutField" disable="true" />
         </children>
      </VBox>
      <HBox alignment="BOTTOM_RIGHT" layoutY="260.0" prefHeight="68.0" prefWidth="600.0" AnchorPane.bottomAnchor="72.0" AnchorPane.rightAnchor="0.0">
